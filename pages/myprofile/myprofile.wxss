.wrapper {
  padding-top: 20rpx;
}
.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}
.profile .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
}
.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
.card {
  background: #fff;
  margin-bottom: 20rpx;
}
.items .item {
  height: 90rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.items .item:last-child {
  border-bottom: none;
}
.items .item .title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.items .item image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 40rpx;
}
.items .item .count {
  font-size: 24rpx;
  color: #abb4bf;
}
.items .item .count.reddot {
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  padding: 0 7px;
  background: #ff5959;
  color: #fff;
}